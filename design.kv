
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15,15
            spacing: 20,20
            Label:
                text: "User Login"
                font_size: "20sp"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text,root.ids.password.text)
                    size_hint: 0.3,0.5
                    pos_hint: {"center_x":0.5,"center_y":0.6}
            Label:
                id: wrong_login
                color: "yellow"
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10,10
            spacing: 10,0
            Button:
                text: "Forgot Password?"
                background_color: 1,1,1,0
                color: "#3f4beb"
                opacity: 1 if self.state == "normal" else 0.5
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                background_color: 1,1,1,0
                color: "#3f4beb"
                opacity: 1 if self.state == "normal" else 0.5

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding: 30,30 
        spacing: 30,30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: "logout_hover.png" if self.hovered else "logout_nothover.png"
                size_hint: 0.35,0.35
                pos_hint: {"center_x": 0.93, "center_y": 0.8}
            Button:
                text: "Change password"
                size_hint: 0.30,0.35
                padding: 10,0
                pos_hint: {"center_x": 0.07, "center_y": 0.8}
                on_press: root.change_password()
            GridLayout:
                cols:2
                Label:
                    text: "Logged as: "
                    size_hint: 0.20,0.35
                Label:
                    id: logged_as
                    size_hint: 0.20,0.35
                    text: ""
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text: "Things to try: happy, sad, unloved"
        Button:
            text: "Enlighten me"
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:    
            Label:
                id: quote
                text: ""
                text_size: self.width,None
                size_hint_y: None
                height: self.texture_size[1]

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            Label:
                text:"Sign up successful!"
                size_hint: 0.2, 0.2
                pos_hint: {"center_x":0.5,"center_y":0.9}
                font_size: "30sp"
            Button:
                padding: 10, 10
                text:"Go back to login screen"
                size_hint: 0.2, 0.2
                pos_hint: {"center_x":0.5,"center_y":0.1}
                on_press: root.go_back()
                size_hint_x: None
                width: self.texture_size[0]
                height: self.texture_size[1]

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 15, 15
        spacing: 20, 20
        Label:
            text: "Sign up!"
            size_hint: 0.2,0.2
            font_size: "30sp"
        GridLayout:
            cols: 1
            spacing: 0, 30
            TextInput:
                id: username
                hint_text: "Username"
                size_hint: 0.2,0.2
            TextInput:
                id: password
                password: True
                hint_text: "Password"
                size_hint: 0.2,0.2
            TextInput:
                id: email
                hint_text: "Email"
                size_hint: 0.2,0.2
        RelativeLayout:
            Button:
                pos_hint: {"center_x":0.25,"center_y":0.8}
                size_hint: 0.2,0.2
                padding: 10, 0
                size_hint_x: None
                text: "Go back"
                on_press: root.back_to_login()
            Button:
                size_hint: 0.2,0.2
                pos_hint: {"center_x":0.75,"center_y":0.8}
                padding: 10, 0
                size_hint_x: None
                text: "Submit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text, root.ids.email.text)
            Label:
                id: wrong_sign_up
                text: ""
                color: "yellow"
                pos_hint: {"center_x":0.5,"center_y":0.2}

<RootWidget>
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"
    ChangePassword:
        name: "change_password_screen"